{
    "python.testing.pytestArgs": [
        ".",
        "--ignore=test_data"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=127"
    ],
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "--show-column-numbers",
        "--no-pretty",
        "--namespace-packages"
    ],
    "python.formatting.provider": "none",
    "python.analysis.extraPaths": [
        "${workspaceFolder}"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
      },
    "githubIssues.queries": [
        {
            "label": "My Issues",
            "query": "default"
        },
        {
            "label": "v0.10 Issues",
            "query": "state:open repo:${owner}/${repository} sort:created-desc milestone:v0.10 "
        },
        {
            "label": "v0.11 Issues",
            "query": "state:open repo:${owner}/${repository} sort:created-desc milestone:v0.11 "
        },
        {
            "label": "Backlog",
            "query": "state:open repo:${owner}/${repository} sort:created-desc no:milestone"
        },
    ]
}